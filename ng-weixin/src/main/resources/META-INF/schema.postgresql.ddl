
/*
 * 微信推送的消息（抽象）
 */
CREATE TABLE NG_TBL_WEIXIN_MESSAGE
(
	D_TYPE						SMALLINT		NOT NULL,
	PK_ID						CHAR(25)		PRIMARY KEY,
	C_MSG_ID					VARCHAR(200),
	C_FROM_USER_NAME			VARCHAR(200),
	C_TO_USER_NAME				VARCHAR(200),
	C_ORIGIN_TIME				BIGINT,
	C_CREATE_TIME				TIMESTAMP
);

COMMENT ON TABLE NG_TBL_WEIXIN_MESSAGE IS '微信推送的消息（抽象）';
COMMENT ON COLUMN NG_TBL_WEIXIN_MESSAGE.D_TYPE				IS '消息类型';
COMMENT ON COLUMN NG_TBL_WEIXIN_MESSAGE.PK_ID				IS '消息记录id，经过处理的UID，全局唯一';
COMMENT ON COLUMN NG_TBL_WEIXIN_MESSAGE.C_MSG_ID			IS '微信消息的id';
COMMENT ON COLUMN NG_TBL_WEIXIN_MESSAGE.C_FROM_USER_NAME	IS '发送消息的用户';
COMMENT ON COLUMN NG_TBL_WEIXIN_MESSAGE.C_TO_USER_NAME		IS '接收消息的用户';
COMMENT ON COLUMN NG_TBL_WEIXIN_MESSAGE.C_ORIGIN_TIME		IS '消息附带的createTime，整形';
COMMENT ON COLUMN NG_TBL_WEIXIN_MESSAGE.C_CREATE_TIME		IS '消息记录在本地创建的时间';


/*
 * 微信推送的文字信息
